{
  "redirects": [
    {
      "source": "/legacy/:path*",
      "destination": "/new/:path*",
      "permanent": true
    },
    {
      "source": "/old-page",
      "destination": "/new-page",
      "permanent": true
    },
    {
      "source": "/blog/:slug",
      "destination": "/articles/:slug",
      "permanent": false
    },
    {
      "source": "/external-link",
      "destination": "https://example.com",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/proxy/:path*",
      "destination": "https://external-api.com/:path*"
    },
    {
      "source": "/api/:endpoint*",
      "destination": "https://your-backend.com/api/:endpoint*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
